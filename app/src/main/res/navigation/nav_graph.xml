<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginScreen">

    <fragment
        android:id="@+id/loginScreen"
        android:name="com.patriciajavier.pattyricetrading.registration.LoginScreen"
        android:label="Login"
        tools:layout="@layout/fragment_login_screen" >
        <action
            android:id="@+id/action_loginScreen_to_registrationScreen"
            app:destination="@id/registrationScreen" />
        <action
            android:id="@+id/action_loginScreen_to_shopkeeperScreen"
            app:destination="@id/shopkeeperScreen" />
        <action
            android:id="@+id/action_loginScreen_to_adminScreen"
            app:destination="@id/adminScreen" />
    </fragment>
    <fragment
        android:id="@+id/registrationScreen"
        android:name="com.patriciajavier.pattyricetrading.registration.RegistrationScreen"
        android:label="Register"
        tools:layout="@layout/fragment_registration_screen" >
        <action
            android:id="@+id/action_registrationScreen_to_loginScreen"
            app:destination="@id/loginScreen" />
        <action
            android:id="@+id/action_registrationScreen_to_adminScreen"
            app:destination="@id/adminScreen" />
        <action
            android:id="@+id/action_registrationScreen_to_shopkeeperScreen"
            app:destination="@id/shopkeeperScreen" />
    </fragment>
    <fragment
        android:id="@+id/adminScreen"
        android:name="com.patriciajavier.pattyricetrading.home.AdminScreen"
        android:label="Admin"
        tools:layout="@layout/fragment_admin_screen" >
        <action
            android:id="@+id/action_adminScreen_to_loginScreen"
            app:destination="@id/loginScreen" />
    </fragment>
    <fragment
        android:id="@+id/shopkeeperScreen"
        android:name="com.patriciajavier.pattyricetrading.home.ShopkeeperScreen"
        android:label="Shopkeeper"
        tools:layout="@layout/fragment_shopkeeper_screen" >
        <action
            android:id="@+id/action_shopkeeperScreen_to_loginScreen"
            app:destination="@id/loginScreen" />
    </fragment>
</navigation>