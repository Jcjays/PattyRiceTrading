<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.admin.market.ProductMarketScreen">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/oxygen_bold"
        android:text="SACK SALES"
        android:textColor="?attr/colorOnBackground"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.epoxy.EpoxyRecyclerView
        android:id="@+id/productMarketEpoxyRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:itemSpacing="5dp"
        android:layout_marginTop="20dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/paymentOutlinedTextField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        tools:listitem="@layout/product_market_card_model" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerInsetEnd="16dp"
        app:dividerInsetStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/paymentOutlinedTextField"
        app:layout_constraintTop_toBottomOf="@+id/productMarketEpoxyRecyclerView" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/paymentOutlinedTextField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Total"
        app:boxCornerRadiusTopEnd="0dp"
        app:boxCornerRadiusTopStart="0dp"
        app:layout_constraintBottom_toTopOf="@+id/epoxyRecyclerViewProductMarketCashierList"
        app:layout_constraintEnd_toEndOf="@+id/productMarketEpoxyRecyclerView"
        app:layout_constraintStart_toStartOf="@+id/productMarketEpoxyRecyclerView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/paymentOutlinedEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:enabled="false"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.airbnb.epoxy.EpoxyRecyclerView
        android:id="@+id/epoxyRecyclerViewProductMarketCashierList"
        android:layout_width="200dp"
        android:layout_height="150dp"
        tools:listitem="@layout/total_model_product_market"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:gravity="fill_vertical"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/paymentOutlinedTextField"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sellProductsButton"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Sell"
        android:layout_marginStart="20dp"
        android:textColor="?attr/colorOnSurface"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="@+id/paymentOutlinedTextField"
        app:layout_constraintStart_toEndOf="@+id/epoxyRecyclerViewProductMarketCashierList"
        app:layout_constraintTop_toTopOf="@+id/epoxyRecyclerViewProductMarketCashierList" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/clearProductsButton"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Clear"
        android:textColor="?attr/colorError"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/epoxyRecyclerViewProductMarketCashierList"
        app:layout_constraintEnd_toEndOf="@+id/sellProductsButton"
        app:layout_constraintStart_toStartOf="@+id/sellProductsButton"
        app:layout_constraintTop_toBottomOf="@+id/sellProductsButton" />



    <include
        android:id="@+id/loadingState"
        layout="@layout/loading_screen"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>