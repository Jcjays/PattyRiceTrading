<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/accountModelImageButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:clickable="false"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/accountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oxygen"
            android:textColor="?attr/colorOnBackground"
            android:textSize="14sp"
            android:layout_margin="10dp"
            app:layout_constraintStart_toEndOf="@+id/accountModelImageButton"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Patricia Javier" />

        <TextView
            android:id="@+id/accountRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/oxygen"
            android:textColor="?attr/colorOnBackground"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/accountTitle"
            app:layout_constraintTop_toBottomOf="@+id/accountTitle"
            tools:text="Admin" />


</androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>